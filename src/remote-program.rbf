vmthread MAIN
{
DATA32 Timer
DATA32 Status

UI_DRAW(FILLWINDOW,BG_COLOR,0,0)
UI_DRAW(SELECT_FONT,LARGE_FONT)
UI_DRAW(TEXT,FG_COLOR,5,50,'RUNNING!')
UI_DRAW(UPDATE)

SYSTEM('export LD_LIBRARY_PATH=/media/card/copies',Status)
SYSTEM('/media/card/standalone test_remote.soar',Status)

TIMER_WAIT(1000,Timer)
TIMER_READY(Timer)
}
