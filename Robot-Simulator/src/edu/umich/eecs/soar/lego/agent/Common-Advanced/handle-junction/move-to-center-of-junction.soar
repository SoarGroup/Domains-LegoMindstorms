
sp {handle-junction*propose*move-to-center-of-junction
	(state <s>	^name handle-junction
				-^superstate.has-centered)
-->
	(<s>	^operator.name move-forward)
}


sp {handle-junction*apply*move-to-center-of-junction*rentrant-support
	(state <s>	^name handle-junction
				^operator.name move-forward
				^superstate <ss>)
	(<ss>		^operator.name handle-junction
				-^has-centered
				-^moving-to-center)
-->
	(<ss>	^moving-to-center true)
}

sp {handle-juction*apply*move-to-center*has-centered
	(state <s>	^operator.name init-handle-junction
				^superstate <ss>)
	(<ss>	^operator.name handle-junction
			^moving-to-center <mtc>
			-^has-centered)
-->
	(<ss>	^moving-to-center <mtc> -
			^has-centered true)
}
