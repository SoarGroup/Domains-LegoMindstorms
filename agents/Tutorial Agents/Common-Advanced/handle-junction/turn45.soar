
sp {handle-junctions*propose*turn-45
	(state <s>	^name handle-junction
				^superstate <ss>
				^relative-direction <relative> <> forward)
	(<ss>	^has-centered
			-^mark45)
-->
	(<s>	^operator.name turn)
}

sp {handle-junction*apply*turn-45*rentrant-support
	(state <s>	^name handle-junction
				^operator.name turn
				^relative-direction <relative> <> forward
				^superstate <ss>)
	(<ss>		^operator.name handle-junction
				^has-centered
				-^moving-to-45
				-^mark45)
-->
	(<ss>	^moving-to-45 true)
}

sp {handle-juction*apply*turn*has-turned*mark45
	(state <s>	^operator.name init-handle-junction
				^superstate <ss>)
	(<ss>	^operator.name handle-junction
			^moving-to-45 <mtt>
			-^mark45)
-->
	(<ss>	^moving-to-45 <mtt> -
			^mark45 true)
}
