
sp {handle-junction*propose*move-off-junction
	(state <s>	^name handle-junction
				^superstate <ss>)
	(<ss>	^turned
			-^moved-off-junction-almost)
-->
	(<s>	^operator.name move-forward)
}

sp {handle-junction*propose*move-off-junction*second
	(state <s>	^name handle-junction
				^superstate.moved-off-junction-almost)
-->
	(<s>	^operator <o> +)
	(<o>	^name move-forward
			^second-time true)
}

sp {handle-junction*apply*move-off-junction*one
	(state <s>	^operator.name move-forward
				^superstate <ss>)
	(<ss>	^turned
			^operator.name handle-junction
			-^moved-off-junction-almost)
-->
	(<ss>	^moved-off-junction-almost true)
}

sp {handle-junction*apply*move-off-junction*two
	(state <s>	^operator <o>
				^superstate <ss>)
	(<o>	^name move-forward
			^second-time)
	(<ss>	^moved-off-junction-almost
			^operator.name handle-junction
			-^moved-off-junction)
-->
	(<ss>	^moved-off-junction true)
}
