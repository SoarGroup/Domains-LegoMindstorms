###################################################
#	follow-line*init-substate operator
###################################################

sp {Stage2*propose*follow-line*init-substate
	(state <s>	-^name
				^superstate <ss>)
	(<ss>	^name Line-Follower
			^left-motor <lm>
			^right-motor <rm>
			^color-meaning <cm>
			^color-sensor <cs>)
-->
	(<s>	^operator <o> +)
	(<o>	^name follow-line*init-substate)
}

sp {Stage2*apply*follow-line*init-substate
	(state <s>	^operator.name follow-line*init-substate
				^superstate <ss>)
	(<ss>	^left-motor <lm>
			^right-motor <rm>
			^color-meaning <cm>
			^color-sensor <cs>)
-->
	(<s>	^left-motor <lm>
			^right-motor <rm>
			^color-meaning <cm>
			^color-sensor <cs>
			^name Follow-Line-Substate)
	(<ss> ^previous-color 0)
}
