
sp {Common-Advanced*prefer*backwards-for-select-direction-if-yellow
	(state <s>	^junction-color yellow
				^current-direction <direction>
				^direction-map.direction <dir>
				^operator <o> +)
	(<dir>	^name <direction>
			^backward.name <backward>)
	(<o>	^name select-direction
			^direction <> <backward>)
-->
	(<s>	^operator <o> -)
}

sp {Common-Advanced*prefer*enter-junction*over*follow-line
	(state <s>	^operator <o1> +
				^operator <o2> +
				-^needs-rotation)
	(<o1>	^name enter-junction)
	(<o2>	^name follow-line)
-->
	(<s>	^operator <o1> > <o2>)
}

sp {Common-Advanced*prefer*enter-junction*reject*follow-line
	(state <s>	^operator <o1> +
				^junction-color)
	(<o1>	^name follow-line)
-->
	(<s>	^operator <o1> -)
}
