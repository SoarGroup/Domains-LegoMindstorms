
sp {traverse-junctions*propose*turn
	(state <s>	^name traverse-junction
				^superstate <ss>
				^relative-direction <> forward)
	(<ss>	^has-centered
			-^turned)
-->
	(<s>	^operator <o>)
	(<o>	^name turn)
}

sp {traverse-junctions*apply*turn*finish*left-right
	(state <s>	^name traverse-junction
				^superstate <ss>
				^relative-direction << left right >>
				^io.output-link <out>)
	(<ss>	^mark 2
			-^turned)
-->
	(<ss>	^turned true)
	(<out>	^motor <A> <B> <C> <D>)
	(<A>	^port A
			^set-power 0)
	(<B>	^port B
			^set-power 0)
	(<C>	^port C
			^set-power 0)
	(<D>	^port D
			^set-power 0)
}

sp {traverse-junctions*apply*turn*finish*backward
	(state <s>	^name traverse-junction
				^superstate <ss>
				^relative-direction backward
				^io.output-link <out>)
	(<ss>	^mark 4
			-^turned)
-->
	(<ss>	^turned true)
	(<out>	^motor <A> <B> <C> <D>)
	(<A>	^port A
			^set-power 0)
	(<B>	^port B
			^set-power 0)
	(<C>	^port C
			^set-power 0)
	(<D>	^port D
			^set-power 0)
}

