
sp {Common-Advanced*propose*enter-junction
	(state <s>	^color-type junction
				-^junction-color)
-->
	(<s>	^operator <o> + >)
	(<o>	^name enter-junction
			^action stop)
	(write |Enter Junction| (crlf))
}

sp {Common-Advanced*apply*enter-junction*aligned
	(state <s>	^color-type junction
				^color-sensor-values <csv>
				^operator.name enter-junction
				-^junction-color)
	(<csv>	^<< left center right >> { <color> << red yellow green blue brown >>})
-->
	(<s>	^junction-color <color>
			^aligned-to-junction true)
	(write |Enter Junction - Aligned: | <color> (crlf))
}

sp {Common-Advanced*apply*enter-junction*remove-duplicate-junction-color
	(state <s>	^operator.name enter-junction
				^junction-color { <color1> << red yellow green blue >> }
				^junction-color { <color2> brown })
-->
	(<s>	^junction-color <color2> -)
}
